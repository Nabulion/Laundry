@model UserLaundry.Reservation

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StartWash</title>
</head>
<body>
    <div>
        @foreach (var m in Model.Machines)
        {
            if (!m.start.GetValueOrDefault())
            {
                @m.machineType
                foreach (var program in m.MachinePrograms)
                {
                    @Html.ActionLink(program.ToString(), "Start", new { id = Model.id, programid = program.id })
                    <br />
                }
            }
            else
            {
                if (@Model.StartedWashCosts.LastOrDefault() != null)
                {
                    @m.machineType
                    <div> has started and will be finished in @Model.StartedWashCosts.LastOrDefault().MachineProgram1.programTime mins</div>
                    <br />
                }
            }
        }
        @Html.ActionLink("Back", "Back", new { resid = Model.id, userid = Model.LaundryUser1.name })
    </div>
</body>
</html>
